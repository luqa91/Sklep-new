@model Sklep_new.ViewModels.HomeViewModel

@using Sklep_new.Infrasctructure


@{
    ViewBag.Title = "Praktyczne kursy";
}
<style>
    .carousel-inner > .item > img,
    .carousel-inner > .item > a > img {
        width: 70%;
        margin: auto;
    }
</style>
<!-- Page content -->

<div class="container">
    <br>
    <div class="row">
        <div class="col-md-9">
            <div class="row carousel-holder">
                <div class="col-md-12">
                    <div id="myCarousel" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel" data-slide-to="1"></li>
                            <li data-target="#myCarousel" data-slide-to="2"></li>
                        </ol>

                        <!-- Wrapper for slides -->
                        <div class="carousel-inner" role="listbox">

                            @{
                                var i = 0;
                                foreach (var nowosc in Model.Nowości)
                                {
                                    var itemClass = i++ == 0 ? "item active" : "item";
                                    <div class="@itemClass">
                                        <img src="@Url.ObrazkiSciezka(nowosc.NazwaPlikuObrazka)" alt="">
                                        <div class="carousel-caption">
                                            <a href="@Url.Action("BuyNow", "Koszyk", new { id = nowosc.KursId })" class="btn btn-primary">Buy Now!</a>
                                            <a href="@Url.Action("MoreInfo", "Kursy", new { id = nowosc.KursId })" class="btn btn-default">More Info</a>

                                            <h1>
                                                @nowosc.TytulKursu - @nowosc.AutorKursu
                                            </h1>
                                        </div>
                                    </div>
                                }
                            }

                            <!-- Left and right controls -->
                            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>

                        </div>

                    </div>


                    <!-- Title -->
                    <div class="row">
                        <div class="col-lg-12">
                            <h3>BESTSELLERY</h3>
                        </div>
                    </div>
                    <!-- /.row -->
                    <div class="container">
                        <div class="row text-center">
                            @foreach (var bestseller in Model.Bestsellery)
                            {
                                <div class="col-md-3 col-sm-4 hero-feature">
                                    <div class="thumbnail">
                                        <img src="@Url.ObrazkiSciezka(bestseller.NazwaPlikuObrazka)" alt="">
                                        <div class="caption">
                                            <h3>@bestseller.TytulKursu-@bestseller.AutorKursu</h3>
                                            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                                            <p>
                                                <a href="@Url.Action("BuyNow", "Koszyk", new { id=bestseller.KursId})" class="btn btn-primary">Buy Now!</a> <a href="@Url.Action("MoreInfo", "Kursy" , new { id = bestseller.KursId })" class="btn btn-default">More Info</a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>



                    <div class="row">
                        @foreach (var kategoria in Model.Kategorie)
                        {

                            <div class="col-sm-4 col-lg-4 col-md-4">
                                <div class="thumbnail">
                                    <img src="@Url.IkonyKategoriiSciezka(kategoria.NazwaPlikuIkony)" alt="zdjecie">
                                    <div class="caption">
                                        <h4 class="pull-right">$24.99</h4>
                                        <h4>
                                            <a href="@Url.Action("Lista", "Kursy", new {nazwaKategorii = kategoria.NazwaKategorii.ToLower() })">@kategoria.NazwaKategorii</a>
                                        </h4>
                                        <a href="@Url.Action("BuyNow", "Koszyk", new { id=kategoria.KategoriaId})" class="btn btn-primary">Buy Now!</a>

                                        <p>See more snippets like this online store item at <a target="_blank" href="http://www.bootsnipp.com">Bootsnipp - http://bootsnipp.com</a>.</p>
                                    </div>

                                    <div class="ratings">
                                        <p class="pull-right">15 reviews</p>
                                        <p>
                                            <span class="glyphicon glyphicon-star"></span>
                                            <span class="glyphicon glyphicon-star"></span>
                                            <span class="glyphicon glyphicon-star"></span>
                                            <span class="glyphicon glyphicon-star"></span>
                                            <span class="glyphicon glyphicon-star"></span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>
